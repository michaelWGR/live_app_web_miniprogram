.promote {
  width: 100%;
  padding-bottom: 30rpx;
}

.promote .title {
  position: relative;
  margin: 0 auto;
}

.promote .title .background {
  display: block;
  width: 440rpx;
  margin: 0 auto;
}

.promote .title .text {
  position: absolute;
  top: 18rpx;
  left: 38%;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFA69;
  text-shadow: 0px 3rpx 5rpx rgba(63,164,92,0.52);
}

.promote .content {
  width: 100%;
  height: 550rpx;
  padding-top: 70rpx;
  margin-top: -40rpx;
  background: no-repeat url('https://appdev.61draw.com/dev_test/miniprogram/summary-promote-bg.png');
  background-size: 100% 100%;
  text-align: center;
}

.promote .content .info .add-wrap {
  display: inline-block;
}

.promote .content .info .add-wrap .add {
  position: relative;
  display: inline-block;
  padding: 8rpx 14rpx;
  font-size: 20rpx;
  color: #FA552E;
  background: #FFF0CD;
  border-radius: 6rpx;
  vertical-align: bottom;
}

.promote .content .info .add-wrap .add .num {
  display: inline-block;
  font-size: 35rpx;
  font-weight: bold;
  transform: translateY(10%);
}

.promote .content .info .add-wrap .add .arrow {
  position: absolute;
  top: 0;
  right: 0;
  transform: translate(120%);
  width: 14rpx;
  height: 16rpx;
}

.promote .content .info .add-wrap .total {
  display: inline-block;
  padding-left: 15rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  vertical-align: bottom;
  transform: translateY(50%);
}

.promote .content .info .tips {
  font-size: 26rpx;
  color: #333;
  padding-top: 25rpx;
}

.promote .content .card {
  width: 92%;
  padding-top: 20rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  transform: translateX(-3rpx);
}

.promote .content .card  .swiper-card {
  height: 325rpx;
}

.promote .content .card .card-item {
  width: 304rpx !important;
  height: 100% !important;
}

.promote .content .card .card-frame{
  display: inline-block;
  position: relative;
  width: 304rpx;
  height: 100%;
  color: #fff;
  transform: scale(0.88);
  transform-origin: center center;
  transition: transform 0.3s linear;
  vertical-align: middle;
}

.promote .content .card .active-card-frame{
  transform: scale(1);
  transform-origin: center center;
}

.promote .content .card .card-frame-0 {
  background: no-repeat url('https://appdev.61draw.com/dev_test/miniprogram/summary-promote-card-yellow.png');
  background-size: 100% 100%;
}

.promote .content .card .card-frame-1 {
  background: no-repeat url('https://appdev.61draw.com/dev_test/miniprogram/summary-promote-card-red.png');
  background-size: 100% 100%;
}

.promote .content .card .card-frame-2 {
  background: no-repeat url('https://appdev.61draw.com/dev_test/miniprogram/summary-promote-card-blue.png');
  background-size: 100% 100%;
}

.promote .content .card .card-frame .title {
  padding-top: 40rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0rpx 2rpx 0rpx rgba(253,124,93,0.54);
}

.promote .content .card .card-frame .card-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 26rpx;
  color: #fff;
  white-space: nowrap;
}

.promote .content .card .card-frame .index {
  position: absolute;
  bottom: 30rpx;
  right: 40rpx;
  color: rgba(255, 255, 255, 0.5);
  font-size: 60rpx;
}

.promote .content .card .card-dots{
  display: flex;
  justify-content: center;
  align-items: center;
}

.promote .content .card .card-dots-item{
  width: 10rpx;
  height: 10rpx;
  background: #e0dfde;
  border-radius: 50% 50%;
  margin: 0 6rpx;
  transition: transform 0.3s linear;
  -webkit-transition: transform 0.3s linear;
}

.active-card-dots-item{
  transform: scale(1.5);
  background: #ffc548 !important;
}