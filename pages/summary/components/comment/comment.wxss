.comment {
  width: 100%;
}

.comment .title {
  position: relative;
  margin: 0 auto;
}

.comment .title .background {
  display: block;
  width: 447rpx;
  margin: 0 auto;
}

.comment .title .text {
  position: absolute;
  top: 35rpx;
  left: 38%;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFA69;
  text-shadow: 0px 3rpx 5rpx rgba(63,164,92,0.52);
}

.comment .content {
  width: 100%;
  height: 770rpx;
  padding-top: 100rpx;
  margin-top: -45rpx;
  background: no-repeat url('https://appdev.61draw.com/dev_test/miniprogram/summary-comment-bg.png');
  background-size: 100% 100%;
}

.comment .content .headImage {
  display: block;
  width: 118rpx;
  height: 118rpx;
  margin: 0 auto;
  border-radius: 50%;
}

.comment .content .name {
  padding-top: 14rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #B27832;
  text-align: center;
}

.comment .content .text-container .text-wrap {
  height: 330rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.comment .content .text-container .text-wrap .text {
  padding-top: 8rpx;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #743F00;
  text-indent: 52rpx;
  letter-spacing: 3rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary-comment-text.png') 0 0 repeat-y;
  background-size: 100%;
}

.comment .content .text-container {
  position: relative;
  margin: 0 96rpx 0 126rpx;
}

.comment .content .text-container .shadow {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40rpx;
  background: -webkit-linear-gradient(top, rgba(255, 202, 50, 0), rgba(255, 202, 50, 0.15));
}

.comment .content .like {
  display: block;
  width: 120rpx;
  margin: 10rpx auto 0;
}