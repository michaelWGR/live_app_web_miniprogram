/* pages/summary/components/submitHomework/submitHomework.wxss */
.submit-homework{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 80rpx;
  position: relative; 
}
.submit-homework-title{
  width: 609rpx;
  height: 103rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/submit-homework-title.png') 0 0 no-repeat;
  background-size: 100%;
  position: relative;
}
.submit-homework-title .submit-homework-title-text{
  color: #fffa69;
  font-size: 32rpx;
  position: absolute;
  left: 148rpx;
  top: 19rpx;
  font-weight: bold;
}
.submit-homework-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 29rpx 30rpx 29rpx;
}
.ratio{
  color: #ff6c00;
  font-size: 30rpx;
}
.ratio-text{
  font-size: 24rpx;
  color: #333;
}
.legend{
  width: 100%;
  height: 80rpx;
  color: #666;
  font-size: 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.legend > view{
  padding-left: 40rpx;
  position: relative;
}
.tiaoke::before{
  content: '';
  width: 34rpx;
  height: 8rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/tiaoke.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  left: -2rpx;
  top: 50%;
  transform: translateY(-50%);
}
.non-submit::before{
  content: '';
  width: 32rpx;
  height: 29rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/non-submit.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  left: -2rpx;
  top: 50%;
  transform: translateY(-50%);
}
.half-submit::before{
  content: '';
  width: 32rpx;
  height: 29rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/half-submit.png') right center no-repeat;
  background-size: contain;
  position: absolute;
  left: -2rpx;
  top: 50%;
  transform: translateY(-50%);
}
.perfect-submit::before{
  content: '';
  width: 32rpx;
  height: 29rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/perfect-submit.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  left: -2rpx;
  top: 50%;
  transform: translateY(-50%);
}
.homework-list{
  width: 100%;
  overflow: hidden;
  border-radius: 20rpx 20rpx;
  box-shadow: 5rpx 5rpx 9rpx rgba(255, 179, 0, 0.1)
}
.homework-list .homework-item{
  width: 156rpx;
  height: 136rpx;
  background: #fff;
  float: left;
  border-right: 2rpx solid rgba(255, 108 , 0, 0.3);
}
.homework-item:nth-child(4n){
  width: 158rpx;
  border-right: 0 none;
}
.homework-item .painting-name{
  width: 100%;
  height: 50%;
  background: #fff0cd;
  font-size: 23rpx;
  text-align: center;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
}
.painting-name > view{
  width: 68%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.homework-item .painting-status{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tiaoke-icon{
  width: 34rpx;
  height: 8rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/tiaoke.png') 0 0 no-repeat;
  background-size: 100%;
}
.non-submit-icon{
  width: 32rpx;
  height: 29rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/non-submit.png') 0 0 no-repeat;
  background-size: 100%;
}
.half-submit-icon{
  width: 32rpx;
  height: 29rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/half-submit.png') center center no-repeat;
  background-size: contain;
}
.perfect-submit-icon{
  width: 32rpx;
  height: 29rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/perfect-submit.png') 0 0 no-repeat;
  background-size: 100%;
}
.homework-bottom{
  width: 100%;
  padding-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.teacher-comment{
  width: 460rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  color: #333;
  background: #fff0cd;
  padding: 20rpx 20rpx;
  border-radius: 20rpx 20rpx;
  position: relative;
  box-shadow: 0 0 20rpx rgba(255, 164 , 42, 0.2) inset;
}
.teacher-comment::after{
  content: '';
  width: 0;
  height: 0;
  border: 15rpx solid transparent;
  border-left: 15rpx solid rgba(255, 164 , 42, 0.2);
  position: absolute;
  top: 30rpx;
  right: -28rpx;
}
.homework-teacher-avatar{
  width: 119rpx;
  height: 119rpx;
  background: #fff;
  border-radius: 50% 50%;
  align-self: flex-start;
  margin-top: 9rpx;
}
.grass-1{
  width: 75rpx;
  height: 80rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/grass-2.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  bottom: 70rpx;
  left: 19rpx;
}
.grass-2{
  width: 102rpx;
  height: 75rpx;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/summary/summary-assess-left.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  bottom: 65rpx;
  right:  15rpx;
}