/* pages/summary/components/shine/shine.wxss */
.shine-root{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 77rpx;
  position: relative;
}
.shine-title{
  width: 537rpx;
  height: 103rpx;     
  background: url('http://10.10.117.177:3000/images/summary/shinning-title-background.png') 0 0 no-repeat;
  background-size: 100%;
  position: relative;
}
.shine-title .shine-titlt-text{
  color: #fffa69;
  font-size: 32rpx;
  position: absolute;
  left: 170rpx;
  top: 18rpx;
  font-weight: bold;
}
.shine-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 15rpx;
}
.shine-top{
  font-size: 28rpx;
  text-indent: 2em;
  line-height: 42rpx;
  color: #333;
  padding: 10rpx 30rpx 20rpx 50rpx;
}
.shine-top-red{
  font-size: 30rpx;
  color: #ff3f3f;
}
.shine-middle{
  display: flex;
  justify-content: center;
  align-items: center;
}
.shine-middle .trophy{
  width: 303rpx;
  height: 304rpx;
  margin-right: 60rpx;
  background: url('http://10.10.117.177:3000/images/summary/trophy.png') 0 0 no-repeat;
  background-size: 100%;
}
.shine-middle .shine-middle-text{
  font-size: 98rpx;
  color: #ff6c00;
  position: relative;
  font-weight: bold;
  text-shadow: 0 5rpx 5rpx rgba(255,179,0,0.46);
}
.shine-middle .shine-middle-text::before{
  content: '';
  width: 32rpx;
  height: 46rpx;
  background: url('http://10.10.117.177:3000/images/summary/x.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  left: -39rpx;
  bottom: 28rpx;
}

.shine-swiper{
  width: 100%;
  height: 292rpx;
}

.shine-record-paper{
  width: 564rpx;
  height: 100%;
  background: url('http://10.10.117.177:3000/images/summary/card-background.png') 0 0 no-repeat;
  background-size: 100%;
  position: relative;
  transform: scale(0.88);
  transition: transform 0.3s linear;
  -webkit-transition: transform 0.3s linear;
}
.active-shine-record-paper{
  transform: scale(1);
}
.shine-record{
  color:#743f00;
  font-size: 28rpx;
  line-height: 61rpx;
  position: absolute;
  left: 42rpx;
  top: 10rpx;
}
.red-font{
  color: #ff6950;
}
.indicator-dots{
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dots-item{
  width: 10rpx;
  height: 10rpx;
  background: #e0dfde;
  border-radius: 50% 50%;
  margin: 0 6rpx;
  transition: transform 0.3s linear;
  -webkit-transition: transform 0.3s linear;
}
.active-dots-item{
  transform: scale(1.5);
  background: #ffc548;
}
.shine-like-btn{
  width: 382rpx;
  height: 80rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  background: url('http://10.10.117.177:3000/images/summary/like-btn.png') 0 0 no-repeat;
  background-size: 100%;
}
.like-modal{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  animation: fadeIn 0.3s ease-in-out;
  display: flex;
  justify-content: center;
  align-items: center;
}
.like-image{
  width: 639rpx;
  height: 539rpx;
}
.bounceOut{
  animation: fadeOut 0.3s ease-in-out;
}
.bounceOut .like-image{
  animation: bounceOut 0.3s ease-in-out;
}
.grass-1{
  width: 75rpx;
  height: 80rpx;
  background: url('http://10.10.117.177:3000/images/summary/grass-2.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  bottom: 70rpx;
  left: 19rpx;
}
.grass-2{
  width: 102rpx;
  height: 75rpx;
  background: url('http://10.10.117.177:3000/images/summary/grass-1.png') 0 0 no-repeat;
  background-size: 100%;
  position: absolute;
  bottom: 65rpx;
  right:  15rpx;
}
@keyframes fadeIn {
  from {
    opacity: 0
  }
  to {
    opacity: 1;
  }
}
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
@keyframes bounceOut {
  from {
    transform: scale(1);
  }
  to {
    transform: scale(0);
  }
}