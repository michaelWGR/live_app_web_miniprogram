.summary {
  background: #ffca32;
  overflow-x: hidden;
  position: relative;
}
.bottom-text{
  width: 100%;
  color: #9e5600;
  font-size: 30rpx;
  text-align: center;
  padding-top: 69rpx;
  padding-bottom: 81rpx;
}
.bottom-text > view:nth-child(1){
  padding-bottom: 20rpx;
}
.share-canvas{
  width: 100%;
  height: 2000rpx;
  background: #ffca32;
}

.welcome-pop-wrap {
  position: fixed;
  text-align: center;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 996;
  animation: welcomePopOut .5s ease-in-out;
  animation-delay: 1s;
  -webkit-animation-delay: 1s;
}

.welcome-pop-wrap .welcome-pop {
  position: absolute;
  width: 100%;
  top: 10%;
  left: 0;
}

.welcome-pop-wrap .welcome-image {
  width: 100%;
}

.welcome-pop-wrap .welcome-text {
  width: 100%;
  padding-top: 10rpx;
  font-size: 39rpx;
  color: #fff;
}

.welcome-pop-wrap .welcome-yellow {
  color: #FFEC00;
}

@keyframes welcomePopOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}