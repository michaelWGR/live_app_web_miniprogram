.summary {
  background: #ffca32;
  overflow-x: hidden;
  padding-bottom: 237rpx;
  position: relative;
}
.bottom-text{
  width: 100%;
  color: #9e5600;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  bottom: 81rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bottom-text > view:nth-child(1){
  padding-bottom: 20rpx;
}

.welcome-pop-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 996;
  animation: welcomePopOut .5s ease-in-out;
  animation-delay: 1s;
}

.welcome-pop-wrap .welcome-pop {
  width: 100%
}

@keyframes welcomePopOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}