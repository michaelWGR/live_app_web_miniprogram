/* components/painting/painting.wxss */
.banner-root{
  text-align: center;
  position: relative;
  padding-bottom: 20rpx;
}
.course-name{
  color: #ff6c00;
  font-size: 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-weight: bold;
}
.course-level{
  font-size: 26rpx;
  height: 29rpx;
  line-height: 29rpx;
}
.submit-date{
  font-size: 24rpx;
  height: 61rpx;
  line-height: 61rpx;
  color: #666;
}
.banner-box{
  width: 100%; 
  height: 594rpx;
}
.painting-frame{
  width: 543rpx;
  height: 100%;
  background: url('https://appdev.61draw.com/dev_test/miniprogram/collections/images/paintings-frame.png') 0 0 no-repeat;
  background-size: 100%;
  position: relative;
  transform: scale(0.88);
  transition: transform 0.3s linear;
  -webkit-transition: transform 0.3s linear;
}
.active-painting-frame{
  transform: scale(1);
}
.banner-img{
  width: 396rpx;
  height: 396rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -47.5%);
}
.indicator-dots{
  display: flex;
  justify-content: center;
  align-items: center;
}
.dots-item{
  width: 10rpx;
  height: 10rpx;
  background: #e0dfde;
  border-radius: 50% 50%;
  margin: 0 6rpx;
  transition: transform 0.3s linear;
  -webkit-transition: transform 0.3s linear;
}
.active-dots-item{
  transform: scale(1.5);
  background: #ffc548;
}
.homework-description{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 50rpx;
}