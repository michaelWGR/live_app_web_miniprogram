/* components/coursePop/coursePop.wxss */
.curtain{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .8);
  z-index: 100;
  background-repeat: no-repeat;
  background-size: cover;
}

.curtain .pop{
  width: 640rpx;
  height: 900rpx;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -450rpx;
  margin-left: -320rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
}

.curtain .pop .close{
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.curtain .pop .close image{
  display: block;
  width: 100%;
  height: 100%;
}

.curtain .pop .title{
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.curtain .pop .title .bar{
  width: 31rpx;
  height: 31rpx;
}

.curtain .pop .title .bar image{
  display: block;
  width: 100%;
  height: 100%;
}

.curtain .pop .title .text{
  margin: 0 28rpx;
  color: #ff8a01;
  font-size: 50rpx;
  font-weight: bold;
}

.curtain .pop .wrap{
  width: 100%;
  box-sizing: border-box;
}

.curtain .pop .wrap .series{
  width: 100%;
  height: 86rpx;
  box-sizing: border-box;
  overflow:hidden;
  white-space:nowrap;
  padding-left: 28rpx;
  margin-bottom: 20rpx;
}

.curtain .pop .wrap .series .series-item{
  display: inline-block;
  height: 86rpx;
  line-height: 86rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #666666;
  position: relative;
}

.curtain .pop .wrap .series .series-item.active::after{
  content: "";
  display: block;
  width: 66rpx;
  height: 4rpx;
  background-color: #ff8a01;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -33rpx;
}

.curtain .pop .wrap .course-list{
  width: 580rpx;
  height: 520rpx;
  margin: 0 auto;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.curtain .pop .wrap .course-list .course-item{
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  box-sizing: border-box;
  color: #999999;
  font-size: 36rpx;
  font-weight: bold;
  padding: 0 56rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.curtain .pop .wrap .course-list .course-item.active{
  color: #ff8a01;
}

.curtain .pop .wrap .course-list .course-item text{
  display: block;
  width: 100%;
  flex: 0 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.curtain .pop .wrap .course-list .course-item .active{
  display: block;
  width: 42rpx;
  height: 42rpx;
  flex: 1 0 auto;
}

.curtain .pop .wrap .course-list .course-item:not(:last-child){
  border-bottom: 2rpx solid #f5f5f5;
}

.curtain .pop .btn{
  width: 341rpx;
  height: 92rpx;
  margin: 0 auto;
  border: none;
  outline: none;
  border-radius: 92rpx;
  background-repeat: no-repeat;
  background-color: transparent; 
  background-size: 100% 100%;
  text-align: center;
  color: #ffffff;
  box-shadow: 0 0 0 transparent;
}